<body>
<!-- start header -->
<header>
      <div class="navbar navbar-default navbar-static-top">
          <div class="container">
              <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand"><span>S</span>andbox</a>
              </div>
              <div class="navbar-collapse collapse ">
                  <ul class="nav navbar-nav">
                      {{#if user}}
                      <li class="active"><a href="/">Home</a></li> 
                      <li><a href="/account">Account</a></li> 
                      <li><a href="/logout">Log Out</a></li> 
                      {{else}}
                      <li class="active"><a href="/">Home</a></li> 
                      <li><a href="/login">Login</a></li> 
                      <h4>Welcome! Please log in.</h4>
                      {{/if}}
                  </ul>
              </div>
          </div>
      </div>
</header>
<!-- End Header -->




<!--  Start Slider -->
<section id="featured">
<!-- < start slider -->
<div class="container">
  <div class="row">
    <div class="col-lg-12">
<!--  Slider -->
      <div id="main-slider" class="flexslider">
          <ul class="slides">
            <li>
              <img src="assets/img/slides/1.jpg" alt="" />
              <div class="flex-caption">
                  <h3>Explore</h3> 
        <p>Explore projects, join a team and begin! It's that simple.</p> 
       
              </div>
            </li>
            <li>
              <img src="assets/img/slides/2.jpg" alt="" />
              <div class="flex-caption">
                  <h3>Innovate</h3> 
        <p>Put your skills to work and build.</p> 
        
              </div>
            </li>
            <li>
              <img src="assets/img/slides/3.jpg" alt="" />
              <div class="flex-caption">
                  <h3>Connect</h3> 
        <p>Be part of a community passionate about web development.</p> 
       
              </div>
            </li>
          </ul>
      </div> 
<!-- end slider -->
    </div>
  </div>
</div>   
</section>

<!-- Second Header Section -->
<section class="callaction">
 <div class="container">
    <div class="row">
    <!-- Inputting Idea -->
       <div class="col-lg-12">
          <div class="big-cta">
             <div class="cta-text">
                <h2><span>Sandbox</span> </h2>
             </div>
          </div>
          <form class="form-horizontal" method="POST" action="/add/" class="button-size">
             <fieldset>
                <legend class="text-center col-xs-12">Write Idea</legend>
                <div class="form-group">
                   <div class="col-xs-12">
                      <input placeholder="IDEA" type="text" name="foo" class="form-control" >
                   </div>
                </div>
                <div class="form-group">
                   <div class="col-xs-12">
                      <button type="submit" class="btn btn-success btn-block">Idea!</button>
                   </div>
                </div>
                
             </fieldset>
          </form>
       </div>
    </div>
 </div>
</section>

<!-- All Ideas Section -->

<section id="content">
 <!-- For each post, create a div col-lg-3 -->
 {{#each posts}}
 <div class="container">
    <div class="row">
       <div class="col-lg-12">
          <div class="row">
             <div class="col-lg-3">
                <p>
                   {{id}}. {{body}}
                   {{number}}
                <form action="/post/join/{{this.id}}" method="POST" class="join">
                   <input type="hidden" name="postId" value="{{this.id}}">
                   <div class="box-bottom">
                      <button type="submit" id="build" margin="20px" class="btn btn-success">Build this Idea</button>
                   </div>
                </form>
                </p>
                <div class="box">
                   <div class="box-gray aligncenter">
                      <div class="icon">
                         <i class="fa fa-desktop fa-3x"></i>
                      </div>
                      <!-- Adding avatars here -->
                      <div>
                         <span class="member"></span>
                      </div>
                   </div>
                </div>
             </div>
          </div>
       </div>
    </div>
 </div>
{{/each}}
</section>

<!-- Group Section -->

<section class="callaction">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="big-cta">
        <div class="cta-text">
          <h2><span>Groups</span></h2>
        </div>
      </div>
      {{#each groups}}
        <p>
          Group:{{id}} Post#{{PostId}} User#{{UserId}}
        </p>
      {{/each}}
    </div>
  </div>
</div>
</section>

<!-- footer -->

<footer>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="widget">
          <h5 class="widgetheading">Get in touch with us</h5>
          <address>
          <strong>Sandbox Inc.</strong><br>
            9006 West Corner Avenue, Suite 501<br>
            Someplace 16425 Earth </address>
          <p>
            <i class="icon-phone"></i> (605) 871-2222 <br>
            <i class="icon-envelope-alt"></i> hello@sandbox.com
          </p>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="widget">
          <h5 class="widgetheading">Pages</h5>
          <ul class="link-list">
            <li><a href="/">Home</a></li>
            <li><a href="/account">Account Information</a></li>
            <li><a href="#">Terms | Conditions</a></li>
            <li><a href="#">Privacy Policy</a></li>
          </ul>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="widget">
          <h5 class="widgetheading">Latest Projects</h5>
          <ul class="link-list">
            <li><a href="#">Virtual Whiteboard</a></li>
            <li><a href="#">Find My Father - An easy-to-use app for lost children</a></li>
            <li><a href="#">Badger Facial Recognition</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div id="sub-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-6">
          <div class="copyright">
            <p>&copy; Sandbox. All right reserved.</p>
                        <div class="credits">
