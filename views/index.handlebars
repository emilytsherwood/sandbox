<body>
<div id="wrapper">
  <!-- start header -->
  <header>
        <div class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="index.html"><span>S</span>andbox</a>
                </div>
                <div class="navbar-collapse collapse ">
                    <ul class="nav navbar-nav">
                        {{#if user}}
                        <li class="active"><a href="/">Home</a></li> |
                        <li><a href="/account">Account</a></li> |
                        <li><a href="/logout">Log Out</a></li> |
                        {{else}}
                        <li class="active"><a href="/">Home</a></li> |
                        <li><a href="/login"><a href="login"></a></li> |
                        <h2>Welcome! Please log in.</h2>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
  </header>
<!-- End Header -->

<!-- Start Slider -->
  <section id="featured">
  <!-- start slider -->
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
  <!-- Slider -->
        <div id="main-slider" class="flexslider">
            <ul class="slides">
              <li>
                <img src="img/slides/1.jpg" alt="" />
                <div class="flex-caption">
                    <h3>Explore</h3> 
          <p>Explore projects, join a team and begin! It's that simple.</p> 
         
                </div>
              </li>
              <li>
                <img src="img/slides/2.jpg" alt="" />
                <div class="flex-caption">
                    <h3>Innovate</h3> 
          <p>Put your skills to work and build.</p> 
          
                </div>
              </li>
              <li>
                <img src="img/slides/3.jpg" alt="" />
                <div class="flex-caption">
                    <h3>Connect</h3> 
          <p>Be part of a community passionate about web development.</p> 
         
                </div>
              </li>
            </ul>
        </div>
  <!-- end slider -->
      </div>
    </div>
  </div>  

<!-- Second Header Section -->
</section>
<section class="callaction">
   <div class="container">
      <div class="row">
      <!-- Inputting Idea -->
         <div class="col-lg-12">
            <div class="big-cta">
               <div class="cta-text">
                  <h2><span>Sandbox</span> </h2>
               </div>
            </div>
            <form class="form-horizontal" method="POST" action="/add/" class="button-size">
               <fieldset>
                  <legend class="text-center col-xs-12">Write Idea</legend>
                  <div class="form-group">
                     <div class="col-xs-12">
                        <input placeholder="IDEA" type="text" name="foo" class="form-control" >
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="col-xs-12">
                        <button type="submit" class="btn btn-success btn-block">Idea!</button>
                     </div>
                  </div>
               </fieldset>
            </form>
         </div>
      </div>
   </div>
</section>

<!-- All Ideas Section -->

<section id="content">
   <!-- For each post, create a div col-lg-3 -->
   {{#each posts}}
   <div class="container">
      <div class="row">
         <div class="col-lg-12">
            <div class="row">
               <div class="col-lg-3">
                  <p>
                     {{id}}. {{body}}
                     {{number}}
                  <form action="/post/join/{{this.id}}" method="POST" class="join">
                     <input type="hidden" name="postId" value="{{this.id}}">
                     <div class="box-bottom">
                        <button type="submit" id="build" margin="20px" class="btn btn-success">Build this Idea</button>
                     </div>
                  </form>
                  </p>
                  <div class="box">
                     <div class="box-gray aligncenter">
                        <div class="icon">
                           <i class="fa fa-desktop fa-3x"></i>
                        </div>
                        <!-- Adding avatars here -->
                        <div>
                           <span class="member"></span>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
  {{/each}}
</section>


