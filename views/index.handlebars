  <div class="row">
  <div class="col-sm-6 col-md-6 col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Groups</div>
        <div class="panel-body">
          {{#each groups}}
          <p>
            Group:{{id}} Post#{{PostId}} User#{{UserId}}
